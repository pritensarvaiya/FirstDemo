@model Category
@{
    ViewData["Title"] = "Create";
}

<div class="row my-4">
    <div class="col-md-10">
        <h4>List Category</h4>
    </div>
    <div class="col-md-2">
        <a asp-controller="Category" asp-action="Index" class="btn btn-outline-primary">List Category</a>
    </div>
</div>

<div class="row my-5">
    <div class="col-md-6">
        <form asp-controller="Category" asp-action="Create" method="POST">
            <div class="mb-3">
                <label asp-for="DisplayOrder" class="form-label">Display Order</label>
                <input asp-for="DisplayOrder" type="text" class="form-control">
                <span asp-validation-for="DisplayOrder" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Name" class="form-label">Category Name</label>
                <input asp-for="Name" type="text" class="form-control">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <input type="submit" value="Create" class="btn btn-primary" />
        </form>
    </div>
</div>

@section scripts{
    @{
        <partial name="_validationscriptspartial" />
    }
}