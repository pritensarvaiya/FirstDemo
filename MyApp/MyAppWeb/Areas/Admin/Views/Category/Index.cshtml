@model CategoryViewModel
@{
    ViewData["Title"] = "Index";
}

<div class="row my-4">
    <div class="col-md-10">
        <h4>List Category</h4>
    </div>
    <div class="col-md-2">
        <a asp-controller="Category" asp-action="CreateUpdate" class="btn btn-outline-primary">Add Category</a>
    </div>
</div>
<div class="row">
    <div class="col-md-8">
        <table id="categoryTable" class="my-5 table table-bordered table-striped">
            <thead>
                <tr>
                    <th scope="col">Display Order</th>
                    <th scope="col">Name</th>
                    <th scope="col">Edit</th>
                    <th scope="col">Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.categories)
                {
                    <tr>
                        <th>@item.DisplayOrder</th>
                        <td>@item.Name</td>
                        <td><a asp-controller="Category" asp-action="CreateUpdate" asp-route-id="@item.Id" class="text-success"><i class="bi bi-pencil-square"></i></a></td>
                        <td><a asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id" class="text-danger" onclick="return confirm('Are you sure you want to delete this item?');"><i class="bi bi-trash-fill"></i></a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section scripts{
    @{
        <partial name="_Notification" />
    }
     <script>
        $(document).ready(function () {
            $('#categoryTable').DataTable();
        });
    </script>
}